<h1><%= @game.name %></h1>

<%=
  link_to 'delete game', game_path(@game), :method => :delete, 
    :data => {
     :confirm => 'Are you sure you want to delete this game?'
  } 
%>

<%= link_to 'update game', edit_game_path(@game) %>


<div class='col-xs-10 col-xs-offset-1' 'center'>
  <table id='chess'>
    <!--# maping the board with row and index -->
    <% @board.each_index do |y| %>
      <!-- #class row -->
      <tr class='<%= y %>' >
        <!-- # maping the board with col and index -->
        <% @board[y].each_index do |x| %> 
          <!-- # checks if the square is empty, if it is return square-->
          <% if @board[y][x].nil? %> 
           <!-- #class column -->
            <td class='<%= x %>'></td>
          <% else %>
            <!-- # class column -->
            <td class='<%= x %>'>
             <!-- # if a piece returns true => provide linke to move to seperate board for that piece -->
              <%= link_to game_piece_select_path(@board[y][x].game_id, @board[y][x]) do %>
             <!-- # returns image of that piece -->
              <%= image_tag @board[y][x].image_name, :class => 'responsive' %>
              <% end %>
            </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
